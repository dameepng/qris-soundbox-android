<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.SoundboxQRIS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/primary_green
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">
            false
        </item>
    </style>

    <!-- Splash screen theme (no action bar) -->
    <style name="Theme.SoundboxQRIS.Splash" parent="Theme.SoundboxQRIS">
        <item name="android:windowBackground">@color/primary_green</item>
    </style>

</resources>